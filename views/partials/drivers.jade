h2 Driver database

div
  div.input-prepend.span4
    span.add-on Filter:
    input(type="text", ng-model='searchText')
  div.input-prepend.span4
    span.add-on Sort:
    select(ng-model='sortBY')
      option(value='')
      option(value='lastname') Last name
      option(value='firstname') First name
      option(value='class') Class
      option(value='club') Club

table(class='table-hover table')
  tr
    th ID
    th Class
    th Name
    th Club
    th City
    th Birthday
    th Actions
  tr(ng-hide="drivers.length")
    td(colspan="7")
      i.icon-spinner.icon-spin.icon-large
      span  Loading ...
  tr(ng-repeat='driver in drivers | filter:searchText | orderBy:sortBY')
    td {{driver.id}}
    td {{driver.class}}
    td {{driver.firstname}} {{driver.lastname}}
    td {{driver.club}}
    td {{driver.zip}} {{driver.city}}
    td {{driver.birthday}}
    td
      a(href='drivers/{{driver.__id}}/edit', title='Edit "{{driver.firstname}} {{driver.lastname}}"')
        i(class='icon-edit-sign')  edit
