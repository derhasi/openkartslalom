h2 Settings

form.form-horizontal
  fieldset
    legend General
    div.control-group
      label.control-label(for="inputTitle") Title
      div.controls
        input.input-xlarge(type="text", id="inputTitle", ng-model='title')
    div.control-group
      label.control-label(for="inputSubtitle") Subtitle
      div.controls
        input.input-xlarge(type="text", ng-model='inputSubtitle')
  fieldset
    legend Results
    div.control-group
      label.control-label(for="secondsCol1") Seconds Col1
      div.controls
        input.input-mini(type="text", id="secondsCol1", ng-model='col1')
    div.control-group
      label.control-label(for="secondsCol2") Seconds Col2
      div.controls
        input.input-mini(type="text", id="secondsCol2", ng-model='col2')

  hr
  div.actions
    input.btn.btn-large.btn-primary(type="submit", value="Save settings")

